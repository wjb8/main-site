---
const {
  bg = "transparent",
  align = "left",
  width = "narrow",
  padding = "var(--space-lg) 0",
  ...rest
} = Astro.props;
---

<section
  {...rest}
  style={`
  background-color: ${bg}; 
  padding: ${padding}; 
  text-align: ${align};
  `}
  class={`section ${width === "wide" ? "section--wide" : ""}`}
>
  <slot />
</section>
