---
import Section from "./Section.astro";
import ProjectCard from "./ProjectCard.astro";
import SectionHeader from "./SectionHeader.astro";
import "../styles/components/Work.scss";

const projects = [
  {
    title: "Project 1",
    description:
      "Description of project 1. This is a longer description to show how the card handles multiple lines of text.",
    image: "/project1.jpg",
    alt: "Project 1 screenshot",
    href: "#",
    tags: ["Astro", "React", "TypeScript"],
  },
  {
    title: "Project 2",
    description:
      "Description of project 2. Another example of a project description.",
    image: "/project2.jpg",
    alt: "Project 2 screenshot",
    href: "#",
    tags: ["Next.js", "TailwindCSS"],
  },
  {
    title: "Project 3",
    description:
      "Description of project 3. A third example to fill out the grid.",
    image: "/project3.jpg",
    alt: "Project 3 screenshot",
    href: "#",
    tags: ["Vue", "Node.js"],
  },
];
---

<Section id="work">
  <div class="container">
    <SectionHeader title="Selected Work" size={2} />

    <p class="work-intro">Here are some of the projects I've worked on.</p>
    <div class="projects-grid">
      {projects.map((project) => <ProjectCard {...project} />)}
    </div>
  </div>
</Section>
