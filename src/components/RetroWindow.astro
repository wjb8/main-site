---
interface Props {
  title?: string;
  draggable?: boolean;
}

const { title = "Window", draggable = false } = Astro.props;
---

<div class="window" class:list={[{ draggable }]}>
  <div class="title-bar">
    <div class="title-bar-controls">
      <button aria-label="Close"></button>
      <button aria-label="Minimize"></button>
      <button aria-label="Maximize"></button>
    </div>
    <span class="title">{title}</span>
  </div>
  <div class="window-content">
    <slot />
  </div>
</div>

<style>
  .window {
    background: var(--color-window);
    border: var(--border-window);
    box-shadow: var(--shadow-window);
    margin: var(--space-md);
    max-width: 600px;
  }

  .title-bar {
    background: var(--color-window-dark);
    color: var(--color-window);
    padding: var(--space-xs) var(--space-sm);
    display: flex;
    align-items: center;
    cursor: default;
  }

  .title-bar-controls {
    display: flex;
    gap: var(--space-xs);
  }

  .title-bar-controls button {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    border: 1px solid rgba(0, 0, 0, 0.2);
    cursor: pointer;
  }

  .title-bar-controls button:nth-child(1) {
    background: #ff5f57;
  }
  .title-bar-controls button:nth-child(2) {
    background: #ffbd2e;
  }
  .title-bar-controls button:nth-child(3) {
    background: #28c940;
  }

  .title {
    margin-left: var(--space-md);
    font-family: var(--font-heading);
  }

  .window-content {
    padding: var(--space-md);
  }

  .draggable .title-bar {
    cursor: move;
  }
</style>
