---
// src/layouts/Layout.astro
import "../styles/global.scss";

const { title = "James — Freelance Developer" } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta
      name="description"
      content="James - Freelance developer specializing in modern web development"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Space+Grotesk:wght@500;700&family=IBM+Plex+Mono&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>

    <!-- Global styles imported at the top of the file -->
  </head>

  <body>
    <header class="site-header">
      <div class="container">
        <nav>
          <a href="#hero">Home</a>
          <a href="#work">Work</a>
          <a href="#about">About</a>
          <a href="#contact">Contact</a>
        </nav>
      </div>
    </header>

    <main>
      <slot />
    </main>

    <footer class="site-footer">
      <div class="container">
        <p>© {new Date().getFullYear()} James McDonk</p>
      </div>
    </footer>
  </body>
</html>

<style lang="scss">
  .container {
    max-width: var(--site-width);
    margin: 0 auto;
    padding: 0 var(--space-md);
  }

  .site-header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(8px);
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
    z-index: 100;

    nav {
      display: flex;
      justify-content: center;
      gap: var(--space-lg);
      padding: var(--space-md) 0;
    }

    a {
      color: var(--color-text);
      text-decoration: none;
      font-weight: 500;
      transition: color var(--transition-fast);

      &:hover {
        color: var(--color-primary);
      }
    }
  }

  .site-footer {
    padding: var(--space-2xl) 0;
    color: var(--color-text-muted);
    text-align: center;
    border-top: 1px solid rgba(0, 0, 0, 0.1);
  }
</style>
