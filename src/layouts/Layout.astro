---
// src/layouts/Layout.astro
import "../styles/global.scss";

const { title = "James — Freelance Developer" } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>

    <!-- Global styles imported at the top of the file -->
  </head>

  <body>
    <header class="site-header">
      <nav>
        <a href="#hero">Home</a>
        <a href="#work">Work</a>
        <a href="#about">About</a>
        <a href="#contact">Contact</a>
      </nav>
    </header>

    <slot />
    <!-- sections drop in -->

    <footer class="site-footer">
      © {new Date().getFullYear()} James McDonk
    </footer>
  </body>
</html>
